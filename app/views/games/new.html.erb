<% content_for :page_header do %>
  <%= @match.teams.map(&:name).join(' vs ') -%>
<% end %>

<%= render partial: 'shared/errors', locals: { model: @game }-%>
<%= form_for([@match, @game], html: { class: 'form-horizontal' }) do |f| %>
  <div class="form-group">
    <%= f.label :score, class: 'col-sm-2 control-label' -%>
    <div class="col-sm-10">
      <%= f.text_field :score, class: 'form-control'  -%>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :winning_team_id, class: 'col-sm-2 control-label' -%>
    <div class="col-sm-10">
      <%= f.select :winning_team_id, options_from_collection_for_select(@match.teams, :id, :name), {}, { class: 'form-control' } %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
